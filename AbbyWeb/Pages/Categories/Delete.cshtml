@page
@model AbbyWeb.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary ps-3">
                Delete Category
            </h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Name">Name:</label>
            <input disabled class="form-control" asp-for="@Model.Category.Name"/>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder">Display Order:</label>
            <input disabled class="form-control" asp-for="@Model.Category.DisplayOrder"/>

        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px">
            <i class="bi bi-trash-fill"></i> Delete
        </button>
        <a asp-page="Index" class="btn btn-outline-light" style="width: 150px">Back</a>
    </div>
</form>

