@page
@model AbbyWeb.Pages.Admin.FoodTypes.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Food Type list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>
                Create New Food Type
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped w-100">
        <thead>
            <tr>
                <th>Food Type Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FoodTypes)
            {
                <tr>
                    <td width="80%">@item.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
